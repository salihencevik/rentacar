@model RentACar.Models.Cars
@{
    ViewBag.Title = "CarDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/js/Home.js"></script>
<link href="~/Css/Cardetail.css" rel="stylesheet" />
<div class="alert alert-danger alert-dismissible fade hide" role="alert" id="resevationAlert">
    İşlem başarılı!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="container">
    <h2 style="color:white; margin-left:300px; margin-top:-10px;">Araca Ait Detay ve Özellikler</h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel" style="background-position: center;background-size: cover;">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="~/image/@Model.image" class="d-block w-100" alt="..." id="tales">
                    </div>
                    @foreach (var item in Model.CarImage)
                    {
                        <div class="carousel-item">
                            <img src="~/image/@item.Detailimage" class="d-block w-100" alt="..." id="tales">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


        <div class="col-md-7">
            <h3 style="color:white;margin-left:200px; margin-top:50px;">@Model.Brand - @Model.Model Model</h3>
            <div class="form-group">
                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target=".bd-example-modal-lg" style="margin-left:250px; margin-top:10px;margin-bottom:50px;">Rezervasyon Yap</button>
            </div>
            <table class="table table-dark" id="insurance" style="margin-top:-20px;">
                <thead>
                    <tr>
                        <th scope="col">Araç Kargo Durumu</th>
                    </tr>
                </thead>
            </table>
            <p style="color:white; margin-left:50px;">
                Filomuzdaki araçların tamamı, Full Rent A Car kaskoludur. Lütfen araç kiralarken rent a car kaskosu hakkında bilgi isteyiniz.

                Rent a car kaskosu olmayan araçların kiralanması kanunen suç olduğu gibi, bu suçu kiralayan kişi veya kurumunda işlemiş olacağını unutmayın.
            </p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class=" col-md-5">
            <table class="table table-dark" id="table">
                <thead>
                    <tr>
                        <th scope="col">Araba Markası</th>
                        <th scope="col">@Model.Brand</th>
                    </tr>

                <tbody>
                    <tr>
                        <th scope="col">Vites</th>
                        <th scope="col">@Model.Gear</th>
                    </tr>
                    <tr>
                        <th scope="col">Model</th>
                        <td>@Model.Model</td>
                    </tr>
                    <tr>
                        <th scope="col">Maks. Hızı</th>
                        <td>@Model.MaksSpeed</td>
                    </tr>
                </tbody>
                </thead>
            </table>

        </div>
        <div class="col-md-7">
            <table class="table table-dark" id="Contact">
                <thead>
                    <tr>
                        <th scope="col">İletişim</th>

                    </tr>
                </thead>
            </table>
            <img src="~/image/whatsappicon.png" id="imgwhatsapp" />
            <h5 style="margin-left:120px; margin-top:-10px; color:white;">0 524 232 32 32</h5>
            <h5 style="margin-left:120px; margin-top:-70px; color:white;">0 524 232 32 32</h5>
            <table class="table table-dark" id="delivery">
                <thead>
                    <tr>
                        <th scope="col">Talimat Seçenekleri</th>
                    </tr>
                </thead>
            </table>
            <p style="margin-left:330px; margin-top:-10px; color:white;">Araçlarımız sadece günlük, aylık kullanıma açıktır.İstanbul'un heryerine araç teslimi  gerçekleştirmekteyiz... </p>
        </div>
    </div>
</div>



@*<---modal--->*@
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="reservationModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="p-5" method="POST" id="frmTenantCreate" enctype="multipart/form-data">
                <h3 style="margin-left:290px;">Araç Bilgisi</h3>
                <div class="form-row">

                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" name="Model" value="Marka: @Model.Brand ---- Model: @Model.Model" disabled style="text-align:center;">
                    </div>
                    <h3 style="margin-left:290px; margin-top:10px;">Kiracı Bilgisi</h3>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Adınız</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Soyadınız</label>
                        <input type="text" class="form-control" name="SurName">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="inputZip">Email</label>
                        <input type="text" class="form-control" name="Email">
                    </div>
                    <h3 style="margin-left:260px; margin-top:10px;">Kiralama Bilgisi</h3>
                    <div class="form-group col-md-12">
                        <label for="inputZip">Araç Kiralancak Gün Sayısı</label>
                        <input class="form-control" type="number" value="1" min="1" max="10" pattern="d{1}" title="yasak" required name="DayCount" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Arac Kiralama Tarihi</label>
                        <div class="input-group date" data-provide="datepicker">
                            <input type="date" class="form-control" name="BuyDate">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputZip">Araç İade Tarihi</label>
                        <div class="input-group date" data-provide="datepicker">
                            <input type="date" class="form-control" name="ReturnDate">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCategory">Araç Alım Yeri</label>
                        <select id="inputCategory" class="form-control" name="BuyAdress">
                            <option>Seçiniz</option>
                            <option>Atatürk Havalimanı</option>
                            <option>Esenler-Otogar</option>
                            <option>Taksim</option>
                            <option>Aksaray</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCategory">Araç İade Yeri</label>
                        <select id="inputCategory" class="form-control" name="ReturnAdress">
                            <option>Seçiniz</option>
                            <option>Atatürk Havalimanı</option>
                            <option>Esenler-Otogar</option>
                            <option>Taksim</option>
                            <option>Aksaray</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button id="reservationSubmit" class="btn btn-primary float-lg-right" style="margin-top:50px; margin-left:290px;">Rezervasyon Yap</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

