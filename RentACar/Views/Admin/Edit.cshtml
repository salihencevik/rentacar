@model RentACar.Models.Cars
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}   
<form class="p-5" action="/Admin/EditBlog" method="POST">
    <div class="form-row">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group col-md-6">
            <label>Marka</label>
            <input type="text" class="form-control" name="Brand" value="@Model.Brand">
        </div>

        <div class="form-group col-md-6">
            <label>Vites</label>
            <input type="text" class="form-control" name="Gear" value="@Model.Gear">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Maks. Hız</label>
            <input type="text" class="form-control" name="MaksSpeed" value="@Model.MaksSpeed">
        </div>
        <div class="form-group col-md-6">
            <label>Arac Açıklaması</label>
            <input type="text" class="form-control" name="explanation" value="@Model.explanation">
        </div>
        <div class="form-group col-md-6">
            <label>Model</label>
            <input type="text" class="form-control" name="Model" value="@Model.Model">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group has-info">
                <label for="txtCvFile" class="control-label bold"></label>
                <input type="file" name="Image" id="txtCvFile">
            </div>
        </div>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary float-lg-right">Kaydet</button>
    </div>
</form>




